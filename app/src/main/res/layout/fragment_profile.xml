<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/profiletxt" />

    <ImageButton
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="360dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:src="@drawable/editprofilebutton" />

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/genreblues"
        tools:src="@drawable/genrelatino" />

    <ImageButton
        android:id="@+id/btnChangePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ivProfilePicture"
        android:layout_alignBottom="@+id/ivProfilePicture"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@null"
        android:src="@drawable/iconaddphoto" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/ivProfilePicture"
        android:layout_marginTop="86dp"
        android:background="#F1E2E2" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfilePicture"
        android:layout_centerInParent="true"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/quicksand_bold"
        tools:text="Sebastian Andrade" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/quicksand"
        tools:text="Miami, FL" />

    <TextView
        android:id="@+id/tvAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="About"
        android:textColor="#EB5757"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvAboutME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAbout"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="My name is Rahul Roy and for some reason only girls share the same music taste as me...? " />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/tvAboutME"
        android:layout_marginTop="15dp"
        android:background="#F1E2E2" />

    <TextView
        android:id="@+id/tvLikedSongs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Favorite Songs"
        android:textColor="#EB5757"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/svLikedSongs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvLikedSongs">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/genreblues" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/genrehiphop" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/genrepop" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/genrerock" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>